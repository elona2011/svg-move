{
    "compilerOptions": {
        "strictNullChecks": true,
        "module": "commonjs",
        "allowJs": false,
        "target": "es6",
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}